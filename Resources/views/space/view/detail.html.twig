{% extends '@StewieWiki/default/layout.html.twig' %}
{% trans_default_domain 'StewieWikiBundle' %}

{% block filterBlock %}{% endblock filterBlock %}

{% block pageTitle %}<small class="text-muted">{{ 'header.space.view'|trans }}</small> {{ space.name }}{% endblock pageTitle %}
{% block pageMenu %}
{% endblock pageMenu %}

{% block content %}

<!-- tab bar -->
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link active" href="#">{{ 'label.details'|trans }}</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('stewie_wiki_space_view_user', {'slug': space.slug}) }}">{{ 'label.user_s'|trans }}  <span class="badge badge-primary">{{space.user|length}}</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="{{ path('stewie_wiki_space_view_group', {'slug': space.slug}) }}">{{ 'label.group_s'|trans }}  <span class="badge badge-primary">{{space.group|length}}</a>
      </li>
    </ul>

<br>
<!-- actual form -->

    <div class="form-group row">
      <div class="col-sm-2">
        <strong>{{ 'label.name'|trans }}</strong>
      </div>
      <div class="col-sm-10">
        {{ space.name }}
      </div>
    </div>

    <div class="border-top my-3"></div>

    <div class="form-group row">
      <div class="col-sm-2">
        <strong>{{ 'label.description'|trans }}</strong>
      </div>
      <div class="col-sm-10">
        {{ space.description }}
      </div>
    </div>

{% endblock content %}
