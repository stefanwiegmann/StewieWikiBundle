<nav>
<!-- if any pages -->
{% if pageCount > 0 %}

<ul class="pagination">
  {# Previous #}
  {% if current == 1 %}
    <li class="disabled">
      <a class="page-link" href="#" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
  {% else %}
    <li class="page-item">
      <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): current - 1})) }} " aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
  {% endif %}
    {# Pages #}
  {% if pageCount < 12 %}{# less than 12 Pages #}
    {% for i in 1..pageCount %}
        <li class="page-item{% if current == i %} active{% endif %}"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): i})) }} ">{{i}}</a></li>
    {% endfor %}
    {% else %}
      {% if current < 8 %}{# any current page before 7 #}
      {# Pages #}
      {% for i in 1..8 %}
          <li class="page-item{% if current == i %} active{% endif %}"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): i})) }}">{{i}}</a></li>
      {% endfor %}
      <li class="disabled"><a class="page-link" href="#">...</a></li>
      <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): pageCount - 1})) }}">{{pageCount - 1}}</a></li>
      <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{pageCount}}</a></li>
      {% else %}
        {% if current > pageCount - 7 %}{# any current page in the last 7 #}
          {# Pages #}
          <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): 1})) }} ">1</a></li>
          <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): 2})) }} ">2</a></li>
          <li class="disabled"><a class="page-link" href="#">...</a></li>
          {% for i in 7..0 %}
              <li class="page-item{% if current == pageCount - i %} active{% endif %}"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): pageCount - i})) }} ">{{pageCount - i}}</a></li>
          {% endfor %}
          {% else %}{# any other Page #}
            <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a></li>
            <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): current - 2})) }} ">{{current - 2}}</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): current - 1})) }} ">{{current - 1}}</a></li>
            <li class="page-item active"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): current})) }} ">{{current}}</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): current + 1})) }}">{{current + 1}}</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): current + 2})) }} ">{{current + 2}}</a></li>
            <li class="page-item disabled"><a class="page-link" href="#">...</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): pageCount - 1})) }} ">{{pageCount - 1}}</a></li>
            <li class="page-item"><a class="page-link" href="{{ path(route, query|merge({(pageParameterName): pageCount})) }} ">{{pageCount}}</a></li>
          {% endif %}{# any current page in the last 7 #}
        {% endif %}{# any current page before 8 #}
      {% endif %}{# less than 12 Pages #}
  {# Next #}
  {% if current == pageCount %}
    <li class="disabled">
      <a class="page-link" href="#" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  {% else %}
    <li class="page-item">
      <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): current + 1})) }} " aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  {% endif %}
</ul>

{% endif %}
</nav>
