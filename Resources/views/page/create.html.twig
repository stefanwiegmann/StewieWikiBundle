{% extends '@StewieWiki/page/layout.html.twig' %}
{% trans_default_domain 'StewieWikiBundle' %}

{% block filterBlock %}{% endblock filterBlock %}

{% block pageTitle %}<small class="text-muted">{{ page.space.name }}</small><br>{{ 'header.page.create'|trans }}{% endblock pageTitle %}
{% block pageMenu %}
{{ form_start(form) }}
    {{ form_widget(form.submit) }}
{% endblock pageMenu %}

{% block content %}
<!-- actual form -->

    <div class="form-group row">
      <div class="col-sm-2 col-form-label">
        <strong>{{ form_label(form.title) }}</strong>
      </div>
      <div class="col-sm-10">
        {{ form_errors(form.title) }}
        {{ form_widget(form.title) }}
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2 col-form-label">
        <strong>{{ form_label(form.body) }}</strong>
      </div>
      <div class="col-sm-10">
        {{ form_errors(form.body) }}
        {{ form_widget(form.body) }}
      </div>
    </div>


{{ form_end(form) }}


{% endblock content %}
